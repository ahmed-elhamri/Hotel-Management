<Window x:Class="Hotel_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Management"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid>
            <DataGrid Name="UserDataGrid" ItemsSource="{Binding Users}" Margin="10" />
            <Button Content="Add User" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Click="AddUserButton_Click"/>
            <Button Content="Edit User" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Click="EditUserButton_Click"/>
        </Grid>
    </Grid>
</Window>
