<Window x:Class="Hotel_Management.Views.Admin.Rooms.AddUpdateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Management.Views.Admin.Rooms"
        mc:Ignorable="d"
        Title="AddUpdateRoomWindow" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Name" />
            <TextBox Text="{Binding CurrentRoom.Name}" />

            <Label Content="Capacity" />
            <TextBox Text="{Binding CurrentRoom.Capacity}" />

            <Label Content="Price" />
            <TextBox Text="{Binding CurrentRoom.Price}" />

            <Label Content="Availability" />
            <CheckBox IsChecked="{Binding CurrentRoom.IsAvailable}" Content="Available" />

            <Label Content="Room Type" />
            <ComboBox ItemsSource="{Binding RoomTypes}"
                      SelectedItem="{Binding CurrentRoom.RoomType, Mode=TwoWay}" 
                      DisplayMemberPath="Name" />

            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
