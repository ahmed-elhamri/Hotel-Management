<Window x:Class="Hotel_Management.Views.UserAddUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Management.Views"
        mc:Ignorable="d"
        Title="UserAddUpdateWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="NameTextBox" Width="200" Height="25" Margin="10" VerticalAlignment="Top"/>
        <TextBox Name="EmailTextBox" Width="200" Height="25" Margin="10,45,10,0" VerticalAlignment="Top"/>
        <TextBox Name="PasswordTextBox" Width="200" Height="25" Margin="10,80,10,0" VerticalAlignment="Top"/>
        <Button Content="Save" Width="200" Height="30" VerticalAlignment="Bottom" Margin="10" Click="SaveButton_Click"/>
    </Grid>
</Window>
